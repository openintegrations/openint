{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": [
    "DATABASE_URL",
    "DATABASE_URL_UNPOOLED",
    "JWT_SECRET"
  ],
  "tasks": {
    "download": {
      "outputs": ["*.oas.json"]
    },
    "generate": {
      "dependsOn": ["^generate", "download"],
      "cache": false,
      "outputs": ["*.oas.d.ts"]
    },
    "clean": {},
    "build": {
      "dependsOn": ["^build", "clean"],
      "cache": false
    },
    "pub": {
      "cache": false,
      "dependsOn": ["build"]
    }
  }
}
